{
  "name": "jobscooter-production",
  "version": "1.0.0",
  "description": "JobScooter AI-powered job application platform - Production Build",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop jobscooter-production",
    "pm2:restart": "pm2 restart jobscooter-production",
    "pm2:logs": "pm2 logs jobscooter-production",
    "deploy": "npm ci --only=production && npm run pm2:restart",
    "health-check": "node scripts/health-check.js",
    "db:migrate": "node scripts/db-migrate.js",
    "logs:clear": "rm -f logs/*.log && echo 'Logs cleared'",
    "backup:db": "node scripts/backup-database.js",
    "cleanup": "node scripts/cleanup-temp-files.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "nodemailer": "^6.9.4",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "sharp": "^0.32.4",
    "tesseract.js": "^4.1.1",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "keywords": [
    "jobscooter",
    "recruitment",
    "ai",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "JobScooter Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jobscooter/jobscooter-platform"
  },
  "homepage": "https://sedap.info"
}